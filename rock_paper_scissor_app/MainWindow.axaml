 </Grid>


      <Separator Width="200"/>

      <!-- Computer choice and score -->
      <StackPanel Spacing="6" HorizontalAlignment="Center">
        <TextBlock Text="Computer's Choice:" FontWeight="Bold"/>
        <TextBlock x:Name="ComputerChoiceText" Text="â€”" FontSize="18" />
