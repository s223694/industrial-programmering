        <TextBlock Text="Result:" FontWeight="Bold"/>
        <TextBlock x:Name="ResultText" Text="â€”" FontSize="18" />
      </StackPanel>

      <Separator Width="200"/>

      <!-- Scoreboard -->
      <StackPanel Orientation="Horizontal" Spacing="30" HorizontalAlignment="Center">
        <StackPanel>
          <TextBlock Text="You ðŸ§‘" FontWeight="Bold" HorizontalAlignment="Center"/>
          <TextBlock x:Name="PlayerScoreText" Text="0" FontSize="20" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel>
          <TextBlock Text="Computer ðŸ¤–" FontWeight="Bold" HorizontalAlignment="Center"/>
          <TextBlock x:Name="ComputerScoreText" Text="0" FontSize="20" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel>
          <TextBlock Text="Ties ðŸ˜" FontWeight="Bold" HorizontalAlignment="Center"/>
